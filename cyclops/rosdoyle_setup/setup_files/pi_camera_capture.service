[Unit]
Description=Pi Camera capture service (libcamera -> RTMP)
After=network.target mediamtx.service
Wants=mediamtx.service
StartLimitIntervalSec=300
StartLimitBurst=10

[Service]
Type=simple
ExecStart=/usr/local/bin/pi_camera_capture.sh
Restart=on-failure
RestartSec=5
KillMode=control-group
TimeoutStopSec=10
WatchdogSec=0
Nice=10

[Install]
WantedBy=multi-user.target
